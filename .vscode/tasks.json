    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "hello.exe",
                "hello.cpp"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./hello.exe",
            "problemMatcher": []
        },
        {
            "label": "Build & Run",
            "dependsOn": [
                "Build",
                "Run"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}